    procedure btnRegClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmTelaPrincipal: TfrmTelaPrincipal;

implementation

{$R *.dfm}

procedure TfrmTelaPrincipal.btnExitClick(Sender: TObject);
begin
  Close;
end;

procedure TfrmTelaPrincipal.btnRegClick(Sender: TObject);
begin
  pnlRegisterSub.Visible := not pnlRegister.Visible;

  if pnlRegisterSub.Visible then
    pnlRegister.Color := $00886D5E
  else
    pnlRegister.Color := $004E3F36;

end;

procedure TfrmTelaPrincipal.FormCreate(Sender: TObject);
begin
  pnlRegister.Visible := False;
end;

end.
